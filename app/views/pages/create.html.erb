<% if @user.errors.any? %>
    <div id="error_explanation">
        <h2>
            <%= pluralize(@user.errors.count, "errors") %>
            prohibited this user from being saved:
        </h2>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li>
                    <%= msg %>
                </li>
            <% end %>
        </ul>
    </div>    
<% else %>
    <h2>Successfully registered</h2>
<% end %>

